{
  "name": "mosca",
  "version": "0.19.0",
  "description": "The multi-transport MQTT broker for node.js. It supports AMQP, Redis, ZeroMQ, MongoDB or just MQTT.",
  "main": "index.js",
  "bin": {
    "mosca": "./bin/mosca"
  },
  "scripts": {
    "test": "mocha --recursive --bail --reporter spec test",
    "ci": "mocha --recursive --bail --watch test",
    "coverage": "rm -rf coverage; istanbul cover _mocha -- --recursive --reporter spec --bail",
    "publish-coverage": "(cat coverage/lcov.info | coveralls)",
    "jshint-lib": "jshint lib/*.js",
    "jshint-test": "jshint test/*.js",
    "start": "./bin/mosca -v | bunyan",
    "bundle": "browserify node_modules/mows/index.js -s mqtt > public/mqtt.js",
    "postinstall": "npm run bundle"
  },
  "pre-commit": [
    "jshint-lib",
    "jshint-test",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mcollina/mosca.git"
  },
  "bugs": {
    "url": "http://github.com/mcollina/mosca/issues"
  },
  "engines": {
    "node": "0.10.x"
  },
  "keywords": [
    "mqtt",
    "mqtt server",
    "publish",
    "subscribe",
    "pubsub",
    "rabbitmq",
    "zeromq",
    "0mq",
    "amqp",
    "mosquitto",
    "websocket"
  ],
  "author": "Matteo Collina <hello@matteocollina.com>",
  "license": "MIT",
  "devDependencies": {
    "mocha": "~1.17.1",
    "chai": "~1.9.0",
    "sinon": "~1.7.3",
    "sinon-chai": "~2.5.0",
    "underscore": "~1.6.0",
    "dox-foundation": "~0.5.4",
    "jshint": "~2.4.4",
    "microtime": "~0.5.0",
    "tmp": "0.0.23",
    "supertest": "~0.10.0",
    "coveralls": "~2.10.0",
    "istanbul": "~0.2.6",
    "async_bench": "~0.3.0"
  },
  "dependencies": {
    "mqtt": "~0.3.8",
    "async": "~0.2.10",
    "ascoltatori": "git://github.com/darkua/ascoltatori.git#redis-cluster-support",
    "debug": "~0.7.2",
    "commander": "~2.1.0",
    "minimatch": "~0.2.11",
    "bunyan": "~0.22.1",
    "memdown": "~0.5.1",
    "levelup": "~0.18.2",
    "level-sublevel": "~5.2.0",
    "level-ttl": "~0.5.0",
    "qlobber": "~0.3.0",
    "lru-cache": "~2.5.0",
    "node-uuid": "~1.4.0",
    "extend": "~1.1.3",
    "mows": "0.0.4",
    "json-buffer": "~2.0.7",
    "brfs": "0.0.8",
    "pre-commit": "0.0.4",
    "moment": "~2.5.1",
    "moving-average": "0.0.4",
    "browserify": "~3.33.0",
    "st": "~0.4.1"
  },
  "optionalDependencies": {
    "leveldown": "~0.10.0",
    "zmq": "~2.6.0",
    "amqp": "~0.1.8",
    "redis": "~0.10.1",
    "redis-node-cluster":"git://github.com/darkua/redis-node-cluster.git",
    "mongodb": "~1.3.23"
  }
}
